@model WebAppProduccion.Entities.ModulosSistemas.empleados

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Eliminar Empleado</h4>
</div>
<div class="modal-body">
    <div class="col-md-4 col-xs-12 widget widget_tally_box">

    </div>
    <div class="col-md-4 col-xs-12 widget widget_tally_box">
        <div class="x_panel fixed_height_390">
            <div class="x_content">
                <h3 class="name">
                    @Html.DisplayFor(model => model.Nombres)
                    @Html.DisplayFor(model => model.ApellidoPaterno)
                    @Html.DisplayFor(model => model.ApellidoMaterno)
                </h3>

                <p>
                    <b>@Html.DisplayNameFor(model => model.FechaAlta)</b><br />
                    @Html.DisplayFor(model => model.FechaAlta)<br />
                    <br />
                    <b>@Html.DisplayNameFor(model => model.Email)</b><br />
                    @Html.DisplayFor(model => model.Email)<br />
                    <br />
                    <b>@Html.DisplayNameFor(model => model.FechaEntrada)</b><br />
                    @Model.FechaEntrada.Value.ToShortDateString()<br />
                    <br />
                    <b>@Html.DisplayNameFor(model => model.rol.Nombre)</b><br />
                    @Html.DisplayFor(model => model.rol.Nombre)<br />
                </p>
            </div>
        </div>
    </div>
