}

@section Scripts {
    <!-- Datatables -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>

    <!-- Moment.js: -->
    <script src="~/vendors/moment/moment.js"></script>

    <script type="text/javascript">
        var idproveedor = "@Html.Raw(Model.id)";

        var table = $('#tblcontactos').DataTable({
            "dom": 'Blrtip', // Hides Default Search
            "processing": true,
            "serverSide": true,
            rowId: 'id',
            buttons: [

                {
                    extend: 'copyHtml5',
                    text: '<i class="fa fa-files-o"></i>',
                    titleAttr: 'COPIAR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'print',
                    text: '<i class="fa fa-print"></i>',
                    titleAttr: 'IMPRIMIR',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'excel',
                    text: '<i class="fa fa-file-excel-o"></i>',
                    titleAttr: 'EXCEL',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdf',
                    text: '<i class="fa fa-file-pdf-o"></i>',
                    titleAttr: 'PDF',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: ':visible'
                    }
                }

            ],
            "ajax": {
                "url": "/proveedores/ObtenerContactosProveedor",
                "type": "POST",
                "datatype": "json",
                "data": { idproveedor: idproveedor },
            },
            "aoColumns": [
                //0
                { "data": "id", "autoWidth": true, "visible": false },
                //1
                { "data": "Nombres", "autoWidth": true },
                //2
                { "data": "Puesto", "autoWidth": true },
                //
                { "data": "Email", "autoWidth": true },
                //
                { "data": "Telefono", "autoWidth": true },
                //3
                {
                    "data": null,
                    "targets": -1,
                    "render": function (data, type, full) {
                        return "<button type='button' onclick='EditarContacto(" + full['id'] + ")' class='btn btn-primary '><i class='fa fa-edit'></i></button>";
                    },
                    "bSearchable": false,
                    "sortable": false,
                    "autoWidth": true,
                }
            ]
       });

        var EditarContacto = function (ID) {
            $.ajaxSetup({ cache: false });
            var EditUrl = "/proveedores/EditarContactoProveedor/" + ID;
            $("#MyModalContent").load(EditUrl, function () {
                $("#MyModal").modal({
                    //backdrop: 'static',
                    keyboard: false
                }, 'show');
                bindForm(this);
            });
            return false;
        }

        var CrearContacto = function (ID) {
            $.ajaxSetup({ cache: false });
            var EditUrl = "/proveedores/CreateContacto/?id=" + ID;
            $("#MyModalContent").load(EditUrl, function () {
                $("#MyModal").modal({
                    //backdrop: 'static',
                    keyboard: false
                }, 'show');
                bindForm(this);
            });
            return false;
        }

        function bindForm(dialog) {
            $('form', dialog).submit(function () {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        $("#MyModal").modal('hide');
                        table.draw();
                    },
                    error: function (xml, message, text) {
                        $("#MyModal").modal('show');
                    }
                });
                return false;
            });
        }
    </script>
}

