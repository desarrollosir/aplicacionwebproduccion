@model WebAppProduccion.Entities.ModulosAdministracion.proveedores

@{
    Layout = null;
}

<div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Detalle @Model.NombreComercial</h4>
</div>
<div class="modal-body">
    <div class="x_content">
        <div class="col-xs-3">
            <!-- required for floating -->
            <!-- Nav tabs -->
            <ul class="nav nav-tabs tabs-left">
                <li class="active">
                    <a href="#home" data-toggle="tab">Informacion General</a>
                </li>
                <li>
                    <a href="#profile" data-toggle="tab">Direccion</a>
                </li>
                <li>
                    <a href="#messages" data-toggle="tab">Informacion Bancaria</a>
                </li>
                <li>
                    <a href="#settings" data-toggle="tab">Contactos</a>
                </li>
            </ul>
        </div>

        <div class="col-xs-9">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="home">

                    <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Razon Social
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.RazonSocial">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                RFC
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.RFC">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Actividad Empresarial
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.ActividadEmpresarial">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Respresentante Lega
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.RepresentanteLegal">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Moneda Facturacion
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.monedafacturacion.descripcion">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Credito Otorgado
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.credito.descripcion">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Categoria
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12" value="@Model.categoriaproveedor.descripcion">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane" id="profile">
                    <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Calle
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.direccionproveedor.calle" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Colonia
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.direccionproveedor.colonia" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Municipio
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.direccionproveedor.municipio" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Estado
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.direccionproveedor.estado" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Pais
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.direccionproveedor.pais" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="messages">
                    <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Nombre del Banco
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.informacionbancaria.nombrebanco" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Cuenta Bancaria
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.informacionbancaria.cuentabancaria" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Clave Interbancaria
                            </label>
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <input value="@Model.informacionbancaria.claveinterbancaria" disabled type="text" id="first-name" class="form-control col-md-9 col-xs-12">
                            </div>
                        </div>
                    </div>              
                </div>                
                <div class="tab-pane" id="settings">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Puesto</th>
                                <th>Email</th>
                                <th>Telefono</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.contactosproveedores.Where(x => x.Proveedores_Id == Model.id))
                        {
                        <tr>
                            <td>
                                @item.Nombres
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Puesto
                            </td>
                            <td>
                                @item.Telefono
                            </td>
                        </tr>
                        }
                    </table>
                </div>                
            </div>        
        </div>    
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <input type="submit" value="Guardar" class="btn btn-default" />
</div>
