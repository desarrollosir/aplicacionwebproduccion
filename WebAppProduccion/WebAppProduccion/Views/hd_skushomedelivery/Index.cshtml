@model IEnumerable<WebAppProduccion.Entities.ModulosEscaneos.hd_skushomedelivery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHomeDelivery.cshtml";
}

<div class="x_panel">
    <div class="x_title">
        <h2> SKUS Home Delivery <small>Index</small></h2> &nbsp;&nbsp;&nbsp;        
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <table id="tblSKUS" class="table table-bordered jambo_table bulk_action">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.skus.SKU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QtyManual)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QrCode)
                    </th>
                    <th width="8%"></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.skus.SKU)
                    </td>
                    <td>

                        @{
                            if (item.QtyManual != null)
                            {
                                bool check = (bool)item.QtyManual;
                                if ((bool)item.QtyManual)
                                {
                                    <input type="checkbox" checked class="flat"/>
                                }
                                else
                                {
                                    <input type="checkbox" class="flat"/>
                                }
                            }
                            else
                            {
                                <input type="checkbox" class="flat"/>
                            }
                        }
                    </td>
                    <td>
                        @{
                            if (item.QtyManual != null)
                            {
                                if ((bool)item.QrCode)
                                {
                                    <input type="checkbox" checked class="flat"/>
                                }
                                else
                                {
                                    <input type="checkbox" class="flat"/>
                                }
                            }
                            else
                            {
                                <input type="checkbox" class="flat"/>
                            }
                        }
                    </td>

                    <td>
                        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })">Editar <i class="fa fa-edit"></i> </a>               
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@section Styles {
    <!-- Datatables -->
    <link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" />
}

@section Scripts {
    <!-- Datatables -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/pdfmake.min.js"></script>
    <script src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.27/build/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.4.0/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.colVis.min.js"></script>

    <!-- Moment.js: -->
    <script src="~/vendors/moment/moment.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            table = $("#tblSKUS").DataTable({
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": '<"top"<"row"<"col-md-4"l><"col-md-4"B><"col-md-4"f>>>rt<"bottom"ip><"clear">',                 
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-files-o"></i>',
                        titleAttr: 'COPIAR',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i>',
                        titleAttr: 'IMPRIMIR',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'excel',
                        text: '<i class="fa fa-file-excel-o"></i>',
                        titleAttr: 'EXCEL',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="fa fa-file-pdf-o"></i>',
                        titleAttr: 'PDF',
                        orientation: 'landscape',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }

                ],
            });
        });
    </script>
}