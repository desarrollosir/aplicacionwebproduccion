@model WebAppProduccion.Entities.ModulosEscaneos.hd_skushomedelivery

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutHomeDelivery.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="x_panel">
        <div class="x_title">
            <h2>SKUS Home Delivery - @Model.skus.codigobarras <small>Editar</small></h2> &nbsp;&nbsp;&nbsp;
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Qty Manual</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div id="gender" class="btn-group">
                            <label class="btn btn-default">
                                @Html.CheckBoxFor(model => model.QtyManualValor, new { @class = "flat" })
                            </label>
                            @Html.ValidationMessageFor(model => model.QtyManualValor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Codigo QR</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div id="gender" class="btn-group">
                            <label class="btn btn-default">
                                @Html.CheckBoxFor(model => model.QrCodeValor, new { @class = "flat" })
                            </label>
                            @Html.ValidationMessageFor(model => model.QrCodeValor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <a class="btn btn-danger" href="@Url.Action("Index")"> <i class="fa fa-close"></i> Regresar</a>
                        <button type="submit" class="btn btn-default"><i class="fa fa-floppy-o"></i> Guardar Informacion</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}